<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/fragment1"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="231dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/tvPorta"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/door_closed"
                    android:layout_weight="0.61" />

            </LinearLayout>

            <TextView
                android:id="@+id/msgStatusPorta"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Porta atualmente fechada"
                style="@style/TextAppearance.AppCompat.Title"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonAbrir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="     Abrir porta    "
                android:onClick="abrirPorta"
                android:layout_gravity="center"
                android:background="#2196F3"
                android:textColor="#FFFFFF"
                />


            <Button
                android:id="@+id/buttonFechar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="   Fechar porta   "
                android:onClick="fecharPorta"
                android:layout_gravity="center"
                android:background="#2196F3"
                android:textColor="#FFFFFF"
                />


        </LinearLayout>


    </LinearLayout>



</FrameLayout>
