<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/fragment2"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="231dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/tvSistema"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/sistema_ligado"
                    android:layout_weight="0.61" />

            </LinearLayout>

            <TextView
                android:id="@+id/msgStatusSistema"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent"
                android:text="Sistema Ativado"
                style="@style/TextAppearance.AppCompat.Title"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:textSize="25sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonDesligar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Desligar o sistema   "
                android:layout_marginTop="15dp"
                android:onClick="desligarSistema"
                android:layout_gravity="center"
                android:background="#2196F3"
                android:textColor="#FFFFFF"
                />


        </LinearLayout>


    </LinearLayout>



</FrameLayout>
